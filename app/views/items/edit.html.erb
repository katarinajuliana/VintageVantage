<h1>Your Item</h1>

<div class="row">
  <%= render 'form', :locals => { :item => @item } %>
</div>

<br>
<br>
<br>
<div class="row col-md-7">
  <form action="<%= item_url(@item) %>" method="post">
    <input type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">
      
    <input type="hidden"
      name="_method"
      value="DELETE">
         
    <button type="submit" class="btn btn-danger">
      Delete
    </button>
  </form>
</div>