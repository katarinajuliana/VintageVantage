<form id="session-form" role="form">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <div class="form-group">
    <input id="user_email"
       name="user[email]"
       type="text"
       class="form-control"
       placeholder="example@email.com">
  </div>

  <div class="form-group">
    <input
       id="user_password"
       name="user[password]"
       type="password"
       class="form-control"
       placeholder="password">
   </div>

  <button id="sign-in-button" 
    type="submit"
    class="btn btn-info">
    Welcome Back
  </button>
</form>