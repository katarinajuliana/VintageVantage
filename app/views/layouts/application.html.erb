<!DOCTYPE html>
<html>
<head>
  <title>VintageVantage</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <button type="button"
        class="navbar-toggle"
        data-toggle="collapse"
        data-target=".navbar-collapse">
        
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
      <a class="navbar-brand" href="<%= root_url %>">Vintage Vantage</a>
    </div>
  
    <div class="collapse navbar-collapse">
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text"
            class="form-control"
            placeholder="Find items & shops">
        </div>
        
        <button type="submit" class="btn btn-info">Search</button>
      </form>
    
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <p class="navbar-text pull-right">
              Hi, <%= link_to current_user.username, user_url(current_user) %>.
            </p>         
          </li>
    
          <li><%= link_to "❤", favorites_user_url(current_user) %></li>
    
          <% if current_user.shop %>
            <li><%= link_to "Your Shop", shop_url(current_user.shop) %></li>
          <% else %>
            <li><%= link_to "Open a Shop", new_shop_url %></li>
          <% end %>

          <li><%= link_to "Sign Out", session_url , :method => :delete %></li>
        <% else %>
          <li><%= link_to "Join Us", new_user_url %></li>
    
          <li><a data-toggle="modal" data-target="#auth-modal">Sign In</a></li>
        <% end %>
      </ul>
    </div>
  </nav>
  
  <%= render 'sessions/modal' %>
    
  <div class="container"><%= yield %></div>
</body>
</html>


<script type="application/javascript">
  $(function () {
    $("#auth-modal").on('shown.bs.modal', function () {
      
    });
  });
</script>