<h1><a href="<%= user_url(@user) %>"><%= @user.username %>'s</a> Favorites</h1>

<input type="submit"
         id="show-items"
      value="Items">
      
<input type="submit"
         id="show-shops"
      value="Shops">

<div id="favorite-items">
  <%= @user.favorite_items %>
</div>

<div id="favorite-shops" class="hidden">
  <%= @user.favorite_shops %>
</div>


<script type="application/javascript">
  $(function () {
    $("#show-items").on("click", function (event) {
      event.preventDefault();    

      $("#favorite-items").removeClass("hidden");
      $("#favorite-shops").addClass("hidden");
    });
  
    $("#show-shops").on("click", function (event) {
      event.preventDefault();    

      $("#favorite-items").addClass("hidden");
      $("#favorite-shops").removeClass("hidden");
    });
  });
</script>